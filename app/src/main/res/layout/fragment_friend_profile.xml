<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light"
                android:orientation="vertical">

    <include
        android:id="@+id/fragment_friend_profile_toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/fragment_friend_profile_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_friend_profile_linearLayout"
        android:layout_below="@id/fragment_friend_profile_toolbar"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/fragment_friend_profile_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment_friend_profile_unfriend_button"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_friend_profile_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Diana Pislaru, 18"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/fragment_friend_profile_info_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="1,6 miles away"
            android:textSize="15sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/fragment_friend_profile_unfriend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_dark_outline"
        android:textColor="@color/dark"
        android:textSize="12sp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:text="Unfriend"/>

</RelativeLayout>